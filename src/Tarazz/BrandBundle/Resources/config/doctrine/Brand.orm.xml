<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity repository-class="Tarazz\BrandBundle\Entity\BrandRepository" name="Tarazz\BrandBundle\Entity\Brand" table="brand">

        <id name="id" type="integer" column="id">
            <generator strategy="AUTO"/>
        </id>

        <field name="name" type="string" column="name" length="255" nullable="false" />
        <field name="logo" type="string" column="logo" length="255" nullable="true" />
        <field name="title" type="string" column="title" length="1024" nullable="true" />
        <field name="description" type="string" column="description" length="1024" nullable="true" />
        <field name="active" type="boolean" column="active" nullable="true" />
        <field name="parentId" type="integer" column="parent_id" nullable="true" />
        <field name="created" type="datetime" column="created" nullable="false" />
        <field name="updated" type="datetime" column="updated" nullable="false" />

        <one-to-many target-entity="Tarazz\ProductBundle\Entity\Product" mapped-by="brand" field="products" />

    </entity>

</doctrine-mapping>
