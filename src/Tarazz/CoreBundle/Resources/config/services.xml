<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="tarazz_core.menu.builder" class="Tarazz\CoreBundle\Menu\Builder">
            <argument type="service" id="knp_menu.factory"/>
            <argument type="service" id="security.context"/>
        </service>

        <service id="tarazz_core.menu.builder.main" class="Knp\Menu\MenuItem" scope="request"
                 factory-service="tarazz_core.menu.builder" factory-method="createMainMenu">
            <argument type="service" id="router"/>
            <tag name="knp_menu.menu" alias="main"/>
        </service>

        <service id="tarazz_core.menu.voter.request" class="Tarazz\CoreBundle\Menu\Voter\RequestVoter">
            <argument type="service" id="service_container"/>
            <tag name="knp_menu.voter"/>
        </service>
    </services>
    
</container>
